{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Create a new Presentation</h1>

    <form action="{{ path('presentation_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.title) }}
        {{ form_row(form.time) }}
        {{ form_row(form.presenter) }}
        <a href="{{ path('person_new') }}">Create new Person</a>
        {{ form_row(form.session) }}
        <a href="{{ path('session_new') }}">Create new Session</a>
        {{ form_row(form.file) }}
        {{ form_rest(form) }}

        <p>
            <button type="submit">Create</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('presentation') }}">
            List of Presentations
        </a>
    </li>
</ul>
{% endblock %}
