{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Edit Session</h1>

    <form action="{{ path('session_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_row(edit_form.title) }}
        {{ form_row(edit_form.time) }}
        {{ form_row(edit_form.moderator) }}
        <a href="{{ path('person_new') }}">Create new Person</a>
        {{ form_row(edit_form.discussants) }}
        {{ form_rest(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
    <hr>
    <ul class="record_actions">
        <li>
            <a href="{{ path('session') }}">
                List of Sessions
            </a>
        </li>
        <li>
            <form action="{{ path('session_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
